{
  "editor.rulers": [120],
  "python.analysis.importFormat": "absolute",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.analysis.extraPaths": ["${workspaceFolder}/backend"],
  // "python.autoComplete.extraPaths": ["${workspaceFolder}/backend"],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "ruff.lint.args": ["--config", "${workspaceFolder}/backend/pyproject.toml"],
  "autoDocstring.docstringFormat": "google",
  "mypy-type-checker.args": [
    "--config-file=${workspaceFolder}/backend/pyproject.toml"
  ],
  "python.testing.pytestPath": "${workspaceFolder}/backend/.venv/bin/pytest",
  "python.testing.pytestArgs": [
    "tests",
    "-ra",
    "--no-cov",
    "--create-db",
    "--reuse-db"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "evenBetterToml.syntax.semanticTokens": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[ini]": {
    "editor.defaultFormatter": "DavidWang.ini-for-vscode",
    "editor.formatOnSave": true
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true
  },
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "html.autoClosingTags": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "explicit"
    }
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onSave",
  "cSpell.words": [
    "agnd",
    "amet",
    "asgi",
    "Browsable",
    "Callsite",
    "corsheaders",
    "djangorestframework",
    "formik",
    "fsrikpjed",
    "postprocess",
    "pydantic",
    "pytestconfig",
    "pytestmark",
    "reduxjs",
    "secretpassword",
    "structlog",
    "tracebacks",
    "UNDERSCOREIZE",
    "viewset",
    "viewsets",
    "zedq"
  ]
}
